<config>
    <modules>
        <RapidCampaign_Promotions>
            <version>1.0.1</version>
        </RapidCampaign_Promotions>
    </modules>
    <global>
        <helpers>
            <rapidcampaign_promotions>
                <class>RapidCampaign_Promotions_Helper</class>
            </rapidcampaign_promotions>
        </helpers>
        <blocks>
            <rapidcampaign_promotions>
                <class>RapidCampaign_Promotions_Block</class>
            </rapidcampaign_promotions>
        </blocks>
        <models>
            <rapidcampaign_promotions>
                <class>RapidCampaign_Promotions_Model</class>
                <resourceModel>rapidcampaign_resource</resourceModel>
            </rapidcampaign_promotions>
            <rapidcampaign_resource>
                <class>RapidCampaign_Promotions_Model_Resource</class>
                <entities>
                    <promotions>
                        <table>rapidcampaign_promotions</table>
                    </promotions>
                </entities>
            </rapidcampaign_resource>
        </models>
        <resources>
            <rapidcampaign_promotions_setup>
                <setup>
                    <module>RapidCampaign_Promotions</module>
                </setup>
            </rapidcampaign_promotions_setup>
        </resources>
        <events>
            <checkout_cart_product_add_after>
                <observers>
                    <cart_product_added>
                        <type>singleton</type>
                        <class>rapidcampaign_promotions/observer</class>
                        <method>onCartProductAdded</method>
                    </cart_product_added>
                </observers>
            </checkout_cart_product_add_after>
        </events>
    </global>
    <admin>
        <routers>
            <rapidcampaign>
                <use>admin</use>
                <args>
                    <module>RapidCampaign_Promotions</module>
                    <frontName>rapidcampaign</frontName>
                </args>
            </rapidcampaign>
        </routers>
    </admin>
    <frontend>
        <routers>
            <rapidcampaign>
                <use>standard</use>
                <args>
                    <module>RapidCampaign_Promotions</module>
                    <frontName>rapidcampaign</frontName>
                </args>
            </rapidcampaign>
        </routers>
        <layout>
            <updates>
                <rapidcampaign_promotions>
                    <file>rapidcampaign.xml</file>
                </rapidcampaign_promotions>
            </updates>
        </layout>
    </frontend>
    <adminhtml>
        <layout>
            <updates>
                <rapidcampaign_promotions>
                    <file>rapidcampaign.xml</file>
                </rapidcampaign_promotions>
            </updates>
        </layout>
        <events>
            <salesrule_rule_condition_combine>
                <observers>
                    <add_condition_to_sales_rule>
                        <type>singleton</type>
                        <class>rapidcampaign_promotions/observer</class>
                        <method>onConditionCombine</method>
                    </add_condition_to_sales_rule>
                </observers>
            </salesrule_rule_condition_combine>
            <controller_action_predispatch>
                <observers>
                    <build_widget_hook>
                        <type>singleton</type>
                        <class>rapidcampaign_promotions/observer</class>
                        <method>onControllerActionPredispatch</method>
                    </build_widget_hook>
                </observers>
            </controller_action_predispatch>
        </events>
    </adminhtml>
    <phpunit>
        <suite>
            <modules>
                <RapidCampaign_Promotions />
            </modules>
        </suite>
    </phpunit>
    <default>
        <rapidcampaign_promotions>
            <rapidcampaign_general>
                <enable>1</enable>
                <enable_encryption>1</enable_encryption>
                <enable_analytics>1</enable_analytics>
                <cookie_lifetime>2592000</cookie_lifetime>
            </rapidcampaign_general>
            <rapidcampaign_developer>
                <enable_test_mode>0</enable_test_mode>
                <enable_debug_logs>0</enable_debug_logs>
            </rapidcampaign_developer>
            <api_endpoint>
                <production>http://api.rapidcampaign.com</production>
                <test>http://api.dev.rapidcampaign.com</test>
            </api_endpoint>
        </rapidcampaign_promotions>
    </default>
</config>
